{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/portfolio",
        "type": 301
      }
    ]
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
